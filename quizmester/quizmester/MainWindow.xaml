        <!--#region login screen -->

        <!-- Centered Login Card -->
        <Border Background="White" CornerRadius="15" Padding="30" x:Name="Screen1" Visibility="Collapsed"
        Width="338" Height="286" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="242">
                <!-- App Title -->
                <TextBlock Text="Pathoot" FontSize="28" FontWeight="Bold" 
                   Foreground="#4B0082" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Username -->
                <TextBlock Text="Username" FontSize="14" Margin="0,5,0,2"/>
                <TextBox x:Name="Tbx_Username" Width="250" Height="30" Padding="5"
                 BorderBrush="#6A0DAD" BorderThickness="1" 
                 Background="#F9F9F9"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="14" Margin="0,15,0,2"/>
                <PasswordBox x:Name="Pbx_Username" Width="250" Height="30" Padding="5"
                     BorderBrush="#6A0DAD" BorderThickness="1"
                     Background="#F9F9F9"/>

                <!-- Login Button -->
                <Button 
                    x:Name="BtnLogin"
                    Content="Login" 
                    Width="150" 
                    Height="35" 
                    BorderBrush="#6A0DAD"
                    Background="#6A0DAD"
                    Margin="0,10,0,5" Click="BtnLogin_Click">
                    
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don’t have an account? " 
                   FontSize="12" Foreground="Gray"/>
                    <Button x:Name="BtnSignUpScreen" 
                        Content="Sign up" 
                Background="Transparent" 
                Foreground="Blue" 
                FontSize="12"
                FontWeight="Bold" 
                BorderThickness="0" 
                Cursor="Hand" 
                Padding="0" Click="BtnSignUpScreen_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--#endregion-->

        <!--#region SignUp screen -->

        <!-- Centered Login Card -->
        <Border Background="White" CornerRadius="15" Padding="30" 
        x:Name="Screen2" Visibility="Visible"
        Width="338" Height="361" 
        HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="309">
                <!-- App Title -->
                <TextBlock Text="Pathoot" FontSize="28" FontWeight="Bold" 
                   Foreground="#4B0082" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Username -->
                <TextBlock Text="Username" FontSize="14" Margin="0,5,0,2"/>
                <TextBox x:Name="Tbx_Username_S" Width="250" Height="30" Padding="5"
                 BorderBrush="#6A0DAD" BorderThickness="1" Background="#F9F9F9"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="14" Margin="0,15,0,2"/>
                <PasswordBox x:Name="Pbx_Password_S" Width="250" Height="30" Padding="5"
                     BorderBrush="#6A0DAD" BorderThickness="1" Background="#F9F9F9"/>

                <!-- Password Again -->
                <TextBlock Text="Password Again" FontSize="14" Margin="0,15,0,2"/>
                <PasswordBox x:Name="Pbx_Password2_S" Width="250" Height="30" Padding="5"
                     BorderBrush="#6A0DAD" BorderThickness="1" Background="#F9F9F9"/>

                <!-- Sign Up Button -->
                <Button x:Name="BtnSignUp"
                Content="Sign Up" 
                Width="150" Height="35" 
                BorderBrush="#6A0DAD"
                Background="#6A0DAD" Foreground="White"
                FontWeight="Bold"
                Margin="0,10,0,5"
                Click="BtnSignUp_Click"/>

                <!-- Switch to Login Screen -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Already have an account? " FontSize="12" Foreground="Gray"/>
                    <Button x:Name="BtnLoginScreen" 
                    Content="Login" 
                    Background="Transparent" 
                    Foreground="Blue" 
                    FontSize="12"
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Cursor="Hand" 
                    Padding="0" 
                    Click="BtnLoginScreen_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

