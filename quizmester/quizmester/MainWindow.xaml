                                <RotateTransform Angle="30"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                    </Canvas>

                    <!--#endregion-->

                    <TextBlock x:Name="LblQuizNameScore" Text="ERROR" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="100" Foreground="White"/>
                    <TextBlock x:Name="LblQuizCreatorScore"  Text="Created by: Anonymous" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Margin="0,125,0,0" Foreground="White"/>
                    <TextBlock Text="Your Score:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="100" Foreground="White" Margin="0,175,0,0"/>
                    <TextBlock x:Name="LblYourScore" Text="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="150" Foreground="White" Margin="0,300,0,0"/>
                    <TextBlock Text="quiz Score:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="White" Margin="0,575,400,0"/>
                    <TextBlock x:Name="LblQuestionScore" Text="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="White" Margin="0,625,400,0"/>
                    <TextBlock Text="Time Score:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="White" Margin="400,575,0,0"/>
                    <TextBlock x:Name="LblTimeScore" Text="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="White" Margin="400,625,0,0"/>

                </Grid>

            </Border>

            <!-- Enhanced Header -->
            <Grid Height="100" VerticalAlignment="Top">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#6A0DAD" Offset="0.0"/>
                        <GradientStop Color="#8A2BE2" Offset="0.5"/>
                        <GradientStop Color="#6A0DAD" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <!-- Subtle geometric pattern -->
                <Canvas>
                    <Rectangle Width="40" Height="40" Fill="#FFFFFF" Opacity="0.1" Canvas.Left="100" Canvas.Top="30">
                        <Rectangle.RenderTransform>
                            <RotateTransform Angle="45"/>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <Ellipse Width="60" Height="60" Fill="#FFFFFF" Opacity="0.08" Canvas.Left="1200" Canvas.Top="20"/>
                    <Rectangle Width="25" Height="25" Fill="#FFFFFF" Opacity="0.12" Canvas.Left="800" Canvas.Top="40">
                        <Rectangle.RenderTransform>
                            <RotateTransform Angle="30"/>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </Canvas>

                <!-- App Title with improved styling -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                        <Ellipse.Fill>
                            <LinearGradientBrush>
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#E8E8E8" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="lblname" Text="Pathoot" FontSize="42" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="3" ShadowDepth="2" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <!-- Header Close Button -->
                <Button Content="×" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="60" Height="60" Margin="20,20,20,0"
                        Style="{StaticResource CloseButton}" FontSize="30"
                        Click="BtnClose_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>