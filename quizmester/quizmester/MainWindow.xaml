        <!-- Lower opacity so gradient shows through -->

            <!-- Centered Login Card -->
        <Border Background="White" CornerRadius="15" Padding="30"
        Width="338" Height="286" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <!-- App Title -->
                <TextBlock Text="Pathoot" FontSize="28" FontWeight="Bold" 
                   Foreground="#4B0082" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username" FontSize="14" Margin="0,5,0,2"/>
                <TextBox Width="250" Height="30" Padding="5"
                 BorderBrush="#6A0DAD" BorderThickness="1" 
                 Background="#F9F9F9"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="14" Margin="0,15,0,2"/>
                <PasswordBox Width="250" Height="30" Padding="5"
                     BorderBrush="#6A0DAD" BorderThickness="1"
                     Background="#F9F9F9"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don’t have an account? " 
                   FontSize="12" Foreground="Gray"/>
                    <Button Content="Sign up" 
                Background="Transparent" 
                Foreground="Blue" 
                FontSize="12"
                FontWeight="Bold" 
                BorderThickness="0" 
                Cursor="Hand" 
                Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
